<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Upload New Document</title>
    <style>
    body {
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
}
      form {
  margin: 0 auto;
  width: 50%;
  max-width: 600px;
}

h1 {
  font-size: 36px;
  text-align: center;
  margin-top: 50px;
}

label {
  display: inline-block;
  margin-bottom: 0.5rem;
  font-size: 1rem;
  font-weight: bold;
}

input[type="text"],
input[type="number"],
input[type="date"],
textarea {
  display: block;
  width: 100%;
  font-size: 1rem;
  padding: 0.5rem;
  border: 1px solid #ccc;
  border-radius: 0.25rem;
}

input[type="submit"] {
  display: block;
  width: 100%;
  font-size: 1rem;
  padding: 0.5rem;
  border: none;
  border-radius: 0.25rem;
  background-color: #30d76d;
  color: #fff;
  cursor: pointer;
}

input[type="submit"]:hover {
  background-color: #ddd;
  color: black;
}

nav {
  background-color: #30d76d;
  overflow: hidden;
}

nav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

nav li {
  float: right;
}

nav li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

nav li a:hover {
  background-color: #ddd;
  color: black;
}

#names{
        float: left;
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-weight: bolder;
        font-size: large;
      }
      label {
  font-size: 16px;
  padding: 8px;
}

select, #here {
  padding: 8px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-bottom: 10px;
}

#here:hover {
  cursor: pointer;
}
    </style>
  </head>
  <body>
    <nav>
      <ul>
        <li id="names">RESTful API and Database Application</li>
        <li><a href="query">Query</a></li>
        <li><a href="list">List</a></li>
        <li><a href="upload">Upload</a></li>
      </ul>
    </nav>
    <h1>Upload New Document</h1>
    <form method="post" action="/upload">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required><br>

      <label for="age">Age:</label>
      <input type="number" id="age" name="age" required><br>

      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required><br>

      <label for="position">Position:</label>
      <input type="text" id="position" name="position" required>

      <label for="teams">Team:</label>
      <select id="teams" name="teams" required>
        <% teams.forEach((team) => { %>
          <option value="<%= team._id %>"><%= team.teamname %></option>
        <% }); %>
        <option value="Others">Others</option>
      </select>
      <input type="button" id="here" onclick="msg()" value='If others, add your teams here'><br>
      <label for="teamname" id="teamname_" style="display: none;">Team Name:</label>
      <input type="text" id="teamname" name="teamname" style="display: none;">
      <label for="country" id="country_" style="display: none;">Team Country:</label>
      <input type="text" id="country" name="country" style="display: none;">
      <br>

      <input type="submit" value="Submit">
    </form>
    <script>
      function msg() {
      document.getElementById("teams").value='Others';
      document.getElementById("teamname").style.display='flex';
      document.getElementById("teamname").setAttribute('required',"");
      document.getElementById("teamname_").style.display='flex';
      document.getElementById("country").style.display='flex';
      document.getElementById("country").setAttribute('required',"");
      document.getElementById("country_").style.display='flex';
    }
    </script>
  </body>
</html>
